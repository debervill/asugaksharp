<Window x:Class="asugaksharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Добавляем конвертер -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Загрузить кафедры" 
                    Command="{Binding LoadKafedrasCommand}"
                    Padding="10,5"/>
        </StackPanel>

        <ListView Grid.Row="1" 
                  ItemsSource="{Binding Kafedras}"
                  Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" 
                                    DisplayMemberBinding="{Binding Name}" 
                                    Width="300"/>
                    <GridViewColumn Header="Шифр" 
                                    DisplayMemberBinding="{Binding Shifr}" 
                                    Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Индикатор загрузки -->
        <Grid Grid.Row="1" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Background="#80FFFFFF">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Загрузка..." FontSize="24"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>