<Window x:Class="asugaksharp.Features.Diplomnik.DiplomnikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Дипломники" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить" Width="100" Margin="0,0,5,0" Click="AddButton_Click"/>
            <Button Content="Редактировать" Width="100" Margin="0,0,5,0" Click="EditButton_Click"/>
            <Button Content="Удалить" Width="100" Margin="0,0,5,0" Click="DeleteButton_Click"/>
            <Button Content="Обновить" Width="100" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- Таблица данных -->
        <DataGrid Grid.Row="1"
                  x:Name="DataGridDiplomniki"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО (им.)" Binding="{Binding FioImen}" Width="*"/>
                <DataGridTextColumn Header="ФИО (род.)" Binding="{Binding FioRodit}" Width="*"/>
                <DataGridTextColumn Header="Пол" Binding="{Binding Sex}" Width="50"/>
                <DataGridTextColumn Header="Страниц" Binding="{Binding Pages}" Width="70"/>
                <DataGridTextColumn Header="Тема" Binding="{Binding Tema}" Width="*"/>
                <DataGridTextColumn Header="Оригинальность" Binding="{Binding OrigVkr}" Width="100"/>
                <DataGridTextColumn Header="Ср. балл" Binding="{Binding Srball}" Width="80"/>
                <DataGridTextColumn Header="Руководитель" Binding="{Binding PersonName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель редактирования -->
        <GroupBox Grid.Row="2" Header="Редактирование" Margin="0,10,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ФИО (им.):" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TextBoxFioImen" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="ФИО (род.):" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="TextBoxFioRodit" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Пол:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboBoxSex" Margin="0,0,20,5">
                    <ComboBoxItem Content="М"/>
                    <ComboBoxItem Content="Ж"/>
                </ComboBox>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="Страниц:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="1" Grid.Column="3" x:Name="TextBoxPages" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Тема:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" x:Name="TextBoxTema" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Оригинальность %:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="TextBoxOrigVkr" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="3" Grid.Column="2" Text="Ср. балл:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="3" Grid.Column="3" x:Name="TextBoxSrball" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Руководитель:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="ComboBoxPerson"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          Margin="0,0,20,5"/>

                <StackPanel Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Сохранить" Width="100" Margin="0,0,5,0" Click="SaveButton_Click"/>
                    <Button Content="Отмена" Width="100" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
