<Window x:Class="asugaksharp.Features.Gak.GakWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ГАК (Государственная аттестационная комиссия)" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить" Width="100" Margin="0,0,5,0" Click="AddButton_Click"/>
            <Button Content="Редактировать" Width="100" Margin="0,0,5,0" Click="EditButton_Click"/>
            <Button Content="Удалить" Width="100" Margin="0,0,5,0" Click="DeleteButton_Click"/>
            <Button Content="Обновить" Width="100" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- Таблица данных -->
        <DataGrid Grid.Row="1"
                  x:Name="DataGridGaks"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер приказа" Binding="{Binding NomerPrikaza}" Width="150"/>
                <DataGridTextColumn Header="Кол-во бюджет" Binding="{Binding KolvoBudget}" Width="120"/>
                <DataGridTextColumn Header="Кол-во платка" Binding="{Binding KolvoPlatka}" Width="120"/>
                <DataGridTextColumn Header="Период заседания" Binding="{Binding PeriodZasedaniaName}" Width="*"/>
                <DataGridTextColumn Header="Кафедра" Binding="{Binding KafedraName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель редактирования -->
        <GroupBox Grid.Row="2" Header="Редактирование" Margin="0,10,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Номер приказа:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TextBoxNomerPrikaza" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Кол-во бюджет:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="TextBoxKolvoBudget" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Кол-во платка:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TextBoxKolvoPlatka" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="Период заседания:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <ComboBox Grid.Row="1" Grid.Column="3" x:Name="ComboBoxPeriodZasedania"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Кафедра:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="ComboBoxKafedra"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          Margin="0,0,20,5"/>

                <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Сохранить" Width="100" Margin="0,0,5,0" Click="SaveButton_Click"/>
                    <Button Content="Отмена" Width="100" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
