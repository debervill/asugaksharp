<Window x:Class="asugaksharp.Features.Docs.DocsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Документы" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить" Width="100" Margin="0,0,5,0" Click="AddButton_Click"/>
            <Button Content="Редактировать" Width="100" Margin="0,0,5,0" Click="EditButton_Click"/>
            <Button Content="Удалить" Width="100" Margin="0,0,5,0" Click="DeleteButton_Click"/>
            <Button Content="Обновить" Width="100" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- Таблица данных -->
        <DataGrid Grid.Row="1"
                  x:Name="DataGridItems"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding PersonName}" Width="200"/>
                <DataGridCheckBoxColumn Header="Загружен" Binding="{Binding IsUploaded}" Width="80"/>
                <DataGridTextColumn Header="Данные" Binding="{Binding Data}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель редактирования -->
        <GroupBox Grid.Row="2" Header="Редактирование" Margin="0,10,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TextBoxName" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Сотрудник:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <ComboBox Grid.Row="0" Grid.Column="3" x:Name="ComboBoxPerson" DisplayMemberPath="Name" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Данные/Путь:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="TextBoxData" Margin="0,0,20,5"/>

                <CheckBox Grid.Row="1" Grid.Column="3" x:Name="CheckBoxIsUploaded" Content="Загружен" VerticalAlignment="Center" Margin="0,0,0,5"/>

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Сохранить" Width="100" Margin="0,0,5,0" Click="SaveButton_Click"/>
                    <Button Content="Отмена" Width="100" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
